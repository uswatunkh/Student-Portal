<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/btnDosen"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fotodosen"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="7dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Dosen :"
                    android:textSize="13dp"
                    android:fontFamily="@font/ubunturegular"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tvIdDosen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubunturegular"
                    android:textSize="13dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvNamaDosen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Susilo Veri Yulianto, S.Kom., M.T."
                    android:fontFamily="@font/ubunturegular"
                    android:textSize="13dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mata Kuliah   :"
                        android:textSize="13dp"
                        android:fontFamily="@font/ubunturegular"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/tvNamaMK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Praktik Pemrograman Mobile"
                        android:fontFamily="@font/ubunturegular"
                        android:textSize="13dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NIDN                :"
                        android:textSize="13dp"
                        android:fontFamily="@font/ubunturegular"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/tvNIDN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0025078601"
                        android:fontFamily="@font/ubunturegular"
                        android:textSize="13dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="idMK                :"
                        android:textSize="13dp"
                        android:fontFamily="@font/ubunturegular"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/tvIdMk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0025078601"
                        android:fontFamily="@font/ubunturegular"
                        android:textSize="13dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>