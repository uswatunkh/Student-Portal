<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/txt_idPrestasi"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>

    <EditText
        android:id="@+id/txt_namaLomba"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Nama Lomba"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/txt_tahun"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Tahun"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/txt_juara"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Juara"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <Spinner
        android:id="@+id/txt_tingkat"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Tingkat"
        android:singleLine="true"
        android:entries="@array/tingkat_prestasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>

    <EditText
        android:id="@+id/tingkatHide"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:hint="Tingkat"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <Spinner
        android:id="@+id/txt_jenis"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Jenis"
        android:singleLine="true"
        android:entries="@array/jenis_prestasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/jenisHide"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="jenis"
        android:visibility="gone"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload ScanBukti/Piagam"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Belum Pilih"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih File" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>