<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fitur.KalenderAkademikFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KalenderAkademikFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#141932"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <ImageView
                android:id="@+id/backKeterampilan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"

                android:layout_marginLeft="22dp"
                android:text="Kalender Akademik"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                />



        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtSN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="33dp"
                android:ems="10"
                android:visibility="gone"
                android:gravity="center"
                android:hint="Enter SN"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnDownload"
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:textSize="16dp"
                android:layout_marginTop="180dp"
                android:fontFamily="@font/mench"
                android:background="@drawable/button_bg"
                android:text="Download Kalender Akademik "
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnSaveFile"
                android:layout_width="match_parent"
                android:fontFamily="@font/mench"
                android:layout_height="60dp"
                android:textSize="17dp"
                android:layout_margin="33dp"
                android:text="Save File"
                android:background="@drawable/button_bg"
                android:textColor="@android:color/white"
                tools:visibility="visible" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>