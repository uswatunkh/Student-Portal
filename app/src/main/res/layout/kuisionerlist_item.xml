<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txtidEvdos"
        android:layout_width="30dp"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="top"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/txtnomor"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:textColor="@android:color/black"
        android:text="1"/>
    <TextView
        android:id="@+id/txtPertanyaan"
        android:layout_width="310dp"

        android:text="okeee"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/jawaban"
        android:layout_width="5dp"
        android:textColor="@color/card_bg_color"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center"
        android:layout_gravity="top"
        android:textSize="1sp" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/Rad_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/tidakPernah"
            android:layout_width="310dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubunturegular"
            android:text="A"
            android:checked="true" />

        <RadioButton
            android:id="@+id/pernah"
            android:layout_width="310dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:fontFamily="@font/ubunturegular"
            android:text="B" />

        <RadioButton
            android:id="@+id/sering"
            android:layout_width="310dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/ubunturegular"
            android:text="C" />

        <RadioButton
            android:id="@+id/selalu"
            android:layout_width="310dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/ubunturegular"
            android:text="D
" />
        <RadioButton
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:checked="true"
            android:fontFamily="@font/ubunturegular"
            android:text="D
"
            android:textSize="17dp" />


    </RadioGroup>




</LinearLayout>