<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/txt_idMagang"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>

    <EditText
        android:id="@+id/txt_judul"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Judul"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/txt_tempat"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:hint="Tempat"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/txt_provinsi"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:hint="Provinsi"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>

    <EditText
        android:id="@+id/txt_kota"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:hint="Kota/Kabupaten"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_tglMulaiMagang"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:hint="Tanggal Mulai"
            android:textSize="15dp"
            android:focusable="false"
            android:singleLine="true"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s.d"/>

        <EditText
            android:id="@+id/txt_tglSelesaiMagang"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:hint="Tanggal Selesai"
            android:singleLine="true"
            android:focusable="false"
            android:textSize="15dp"
            android:layout_width="130dp"
            android:layout_marginLeft="0dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"/>
    </LinearLayout>

    <EditText
        android:id="@+id/txt_ringkasan"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:hint="Ringkasan"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload ScanBukti/Piagam"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Not Selected"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Document" />
        </LinearLayout>

        <!--        <Button-->
        <!--            android:id="@+id/btnUpload"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="9dp"-->
        <!--            android:text="TAMBAH" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Not Selected"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnSelect2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Document" />
        </LinearLayout>

        <!--        <Button-->
        <!--            android:id="@+id/btnUpload"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="9dp"-->
        <!--            android:text="TAMBAH" />-->
    </LinearLayout>



</LinearLayout>